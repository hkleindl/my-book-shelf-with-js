<h1><%= flash[:success] %></h1>
<div class="book_list">
  <h1 class="mybooks"><%= link_to "MyBooks", user_books_path(current_user) %></h1>

  <div class="scrolling-wrapper">
    <% @my_books.each do |book| %>
          <%= render partial: "book_list", locals: { book: book, user: @user, list_name: "my-books" } %>
    <% end %>
  </div>
  
</div><br>
<%= link_to "Add Book from Library", books_path, class:"btn btn-primary" %> 
<%= link_to "Create New Book", new_book_path, class:"btn btn-primary" %>

